{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022"
    ],
    "types": [
      "bun-types"
    ],
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "paths": {
      "@otakudesu/*": [
        "anims/otakudesu/*"
      ],
      "@samehadaku/*": [
        "anims/samehadaku/*"
      ],
      "@configs/*": [
        "configs/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@libs/*": [
        "libs/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@scrapers/*": [
        "scrapers/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@schemas/*": [
        "schemas/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}